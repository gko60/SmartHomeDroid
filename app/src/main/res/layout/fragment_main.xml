<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_actual"
        android:columnCount="8"
        android:padding="10dp"
        android:rowCount="6">

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_vertical"
            android:layout_row="0"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:text="@string/txt_date_time_default"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />


        <ImageView
            android:id="@+id/iv_actual"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_row="2"
            android:src="@drawable/d0" />

        <TextView
            android:id="@+id/tv_temperature_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_vertical|right"
            android:layout_row="2"
            android:gravity="right"
            android:padding="5dp"
            android:tag="@string/tagHmTemperatureOut"
            android:text="@string/tv_temperature_out"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_humidity_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="left|center_vertical|right"
            android:layout_marginLeft="40dp"
            android:layout_row="2"
            android:gravity="right"
            android:padding="5dp"
            android:tag="@string/tagHumidityOut"
            android:text="52%"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="Wohnzimmer:"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />


        <TextView
            android:id="@+id/tv_temperature_living_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_gravity="center_vertical|right"
            android:layout_row="2"
            android:gravity="right"
            android:padding="5dp"
            android:tag="@string/tagTemperatureLivingRoom"
            android:text="23,4°"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_humidity_living_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="40dp"
            android:layout_row="2"
            android:gravity="left|right"
            android:padding="5dp"
            android:tag="@string/tagHumidityLivingRoom"
            android:text="55%"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="7"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp" />


        <ImageView
            android:id="@+id/iv_wind"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_row="3"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/tv_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_vertical|right"
            android:layout_row="3"
            android:gravity="right"
            android:padding="5dp"
            android:tag="@string/tagWindSpeed"
            android:text="30 km/h"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_wind_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="40dp"
            android:layout_row="3"
            android:gravity="right"
            android:padding="5dp"
            android:tag="@string/tagWindDirection"
            android:text="270°"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="Keller:"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />


        <TextView
            android:id="@+id/tv_temperature_cellar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_gravity="center_vertical|right"
            android:layout_row="3"
            android:gravity="right"
            android:padding="5dp"
            android:tag="@string/tagTemperatureCellar"
            android:text="20,4°"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_humidity_cellar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="40dp"
            android:layout_row="3"
            android:gravity="center|right"
            android:padding="5dp"
            android:tag="@string/tagHumidityCellar"
            android:text="35%"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <ImageView
            android:id="@+id/iv_air_pressure"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_row="4"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/tv_air_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_vertical|right"
            android:layout_row="4"
            android:gravity="right"
            android:padding="5dp"
            android:tag="@string/tagAirPressure"
            android:text="1025 hPa"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="4"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_row="4"
            android:gravity="center"
            android:padding="5dp"
            android:text="Regen:"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_rain_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_gravity="center_vertical|right"
            android:layout_row="4"
            android:gravity="right"
            android:padding="5dp"
            android:tag="@string/tagRainToday"
            android:text="0 l/m²"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_rain_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="40dp"
            android:layout_row="4"
            android:gravity="center|right"
            android:padding="5dp"
            android:tag="@string/tagRainCounterAll"
            android:text="0 l/m²"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_row="5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Sonne:"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_gravity="center|right"
            android:layout_row="5"
            android:gravity="right"
            android:padding="5dp"
            android:tag="@string/tagBrightness"
            android:text="20 %"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_sunshine_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="40dp"
            android:layout_row="5"
            android:gravity="center|right"
            android:padding="5dp"
            android:tag="@string/tagSunshineDuration"
            android:text="40 min"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

    </GridLayout>

    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_forecast"
        android:columnCount="3"
        android:padding="10dp"
        android:rowCount="4">

        <TextView
            android:id="@+id/tv_day_of_week_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:gravity="center"
            android:padding="5dp"
            android:text="Donnerstag"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <ImageView
            android:id="@+id/iv_today"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:src="@drawable/d3" />

        <TextView
            android:id="@+id/tv_temperature_min_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="15°"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_temperature_max_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="32°"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_day_of_week_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:gravity="center"
            android:padding="5dp"
            android:text="Freitag"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <ImageView
            android:id="@+id/iv_tomorrow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:src="@drawable/d4" />

        <TextView
            android:id="@+id/tv_temperature_min_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="13°"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_temperature_max_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="29°"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_day_of_week_day_after_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:gravity="center"
            android:padding="5dp"
            android:text="Samstag"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <ImageView
            android:id="@+id/iv_day_after_tomorrow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:src="@drawable/d0" />

        <TextView
            android:id="@+id/tv_temperature_min_day_after_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="16°"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

        <TextView
            android:id="@+id/tv_temperature_max_day_after_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="33°"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="@dimen/abc_tv_large" />

    </GridLayout>
</LinearLayout>
