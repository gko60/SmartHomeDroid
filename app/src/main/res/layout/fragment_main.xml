<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="5">

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="center_vertical"
            android:layout_row="0"
            android:gravity="center"
            android:padding="5dp"
            android:text="Samstag 8. August 2015 10:34"
            android:textAppearance="?android:textAppearanceLarge" />


        <Button
            android:id="@+id/button_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:text="@string/bt_txt_refresh" />

        <ImageView
            android:id="@+id/iv_actual"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="2"
            android:src="@drawable/d0" />

        <TextView
            android:id="@+id/tv_temperature_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center|right"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/tv_temperature_out"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_humidity_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="left|center"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="52%"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="Wohnzimmer:"
            android:textAppearance="?android:textAppearanceLarge" />


        <TextView
            android:id="@+id/tv_temperature_living_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_gravity="center_vertical|right"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="23,4°"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_humidity_living_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_gravity="left|center_vertical"
            android:layout_row="2"
            android:gravity="left"
            android:padding="5dp"
            android:text="55%"
            android:textAppearance="?android:textAppearanceLarge" />

        <ImageView
            android:id="@+id/iv_wind"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="3"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/tv_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center|right"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="30 km/h"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="Regenverlauf"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="Keller:"
            android:textAppearance="?android:textAppearanceLarge" />


        <TextView
            android:id="@+id/tv_temperature_cellar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_gravity="center_vertical|right"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="20,4°"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_humidity_cellar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_gravity="left|center_vertical"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="35%"
            android:textAppearance="?android:textAppearanceLarge" />

        <ImageView
            android:id="@+id/iv_air_pressure"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="4"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/tv_air_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center|right"
            android:layout_row="4"
            android:gravity="center"
            android:padding="5dp"
            android:text="1025 hPa"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="4"
            android:gravity="center"
            android:padding="5dp"
            android:text="Luftdruck Verlauf"
            android:textAppearance="?android:textAppearanceLarge" />


    </GridLayout>

    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="4">

        <TextView
            android:id="@+id/tv_day_of_week_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:gravity="center"
            android:padding="5dp"
            android:text="Donnerstag"
            android:textAppearance="?android:textAppearanceMedium" />

        <ImageView
            android:id="@+id/iv_today"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:src="@drawable/d3" />

        <TextView
            android:id="@+id/tv_temperature_min_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="15°"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_temperature_max_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="32°"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_day_of_week_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:gravity="center"
            android:padding="5dp"
            android:text="Freitag"
            android:textAppearance="?android:textAppearanceMedium" />

        <ImageView
            android:id="@+id/iv_tomorrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:src="@drawable/d4" />

        <TextView
            android:id="@+id/tv_temperature_min_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="13°"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_temperature_max_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="29°"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_day_of_week_day_after_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:gravity="center"
            android:padding="5dp"
            android:text="Samstag"
            android:textAppearance="?android:textAppearanceMedium" />

        <ImageView
            android:id="@+id/iv_day_after_tomorrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:src="@drawable/d0" />

        <TextView
            android:id="@+id/tv_temperature_min_day_after_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="16°"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_temperature_max_day_after_tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="33°"
            android:textAppearance="?android:textAppearanceMedium" />

    </GridLayout>
</LinearLayout>
